<!--                                                -->

	<select id="getNavNum" resultType="plan">
		select * from itinerary, place where trip_num=1 and place_id=id group by `day` order by `day`;
	</select>

	<select id="getPlanDatas" resultType="plan">
		select * from itinerary, place where trip_num=1 and place_id=id order by `day`, `order`;
	</select>
